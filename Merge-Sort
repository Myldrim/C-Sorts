#include <stdio.h>
#include <stdlib.h>
#include <time.h>
void merge(int arr[], int left, int mid, int right){
    int i,j,k;
    int n1 = mid - left +1;
    int n2 = right - mid;
    
    int L[n1], R[n2];
    
    for(i=0;i<n1;i++){
        L[i] = arr[left + i];
    }
    for(j=0; j<n2;j++){
        R[j] = arr[mid + 1 + j];
    }
    i = 0;
    j = 0;
    k = left;
    while(i <n1 && j < n2){
        if(L[i] <= R[j]){
            arr[k] = L[i];
            i++;
        } else{
            arr[k] = R[j];
            j++;
        }
        k++;
    }
    while(i<n1){
        arr[k] = L[i];
        i++;
        k++;
    }
    while (j  < n2){
        arr[k] = R[j];
        j++;
        k++;
    }
}
void mergesort(int arr[], int left, int right){
    if(left < right){
        int mid = left + (right - left)/2;
    
        mergesort(arr,left,mid);
        mergesort(arr, mid + 1,right);
        merge(arr,left,mid,right);
    }
    
}
void printArray(int arr[], int size){
    for(int i = 0;i<size;i++){
        printf("%d ", arr[i]);
    }
    printf("\n");
}
void criaVet(int arr[], int size){
    if(arr == NULL){
        printf("Erro ao alocar memoria!");
    }
    for(int i=0;i<size;i++){
        arr[i] = rand() % 100000;
    }
}

int main()
{
    int size;
    printf("Qual o tamanho do vetor voce deseja: ");
    scanf("%d",&size);
   
    int arr[size];
    criaVet(arr,size);
    
    clock_t inicio = clock();
    mergesort(arr,0,size-1);
    clock_t fim = clock();
    printf("array depois: \n");
    printArray(arr,size);
    double tempo_execucao = (double)(fim - inicio) / CLOCKS_PER_SEC;
    printf("\nTempo levado pelo programa: %.6f segundos\n", tempo_execucao);

    return 0;
}